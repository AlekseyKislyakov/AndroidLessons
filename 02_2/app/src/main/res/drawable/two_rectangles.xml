<?xml version="1.0" encoding="utf-8"?>
<layer-list android:height="100dp" android:width="50dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:top="0dp" android:bottom="0dp"
        android:height="100dp" android:width="100dp">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent"/>
        </shape>

    </item>

    <item android:height="60dp" android:width="60dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/colorRed"/>
        </shape>

    </item>
    <item
        android:height="60dp" android:width="60dp"
        android:gravity="right|bottom">

        <shape android:shape="rectangle">
            <solid android:color="@color/colorGreen"/>
        </shape>

    </item>
</layer-list>