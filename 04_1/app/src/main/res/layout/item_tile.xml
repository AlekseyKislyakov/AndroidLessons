<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical"
    android:padding="@dimen/tile_padding">

    <ImageView
        android:id="@+id/header_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:paddingStart="8dp"
        android:paddingTop="8dp"
        android:scaleType="fitStart"
        tools:src="@drawable/ic_guard" />

    <TextView
        android:id="@+id/header_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_toEndOf="@+id/header_picture"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.01"
        android:lineSpacingExtra="4sp"
        android:textSize="16sp"
        android:textStyle="normal"
        tools:text="Квитанции" />

    <TextView
        android:id="@+id/description_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/header_textView"
        android:layout_marginStart="13dp"
        android:layout_marginTop="10dp"
        android:layout_toEndOf="@+id/header_picture"
        android:fontFamily="sans-serif-medium"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="4sp"
        android:textColor="@color/colorWarmGrey"
        android:textSize="12sp"
        android:textStyle="normal"
        tools:text="Сл. платеж 25.02.2018" />
</RelativeLayout>
